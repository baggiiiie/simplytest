{
    "description": "Simple test suite for basic functions",
    "tag": [
        "apollo"
    ],
    "test_cases": [
        {
            "description": "Test random funcs",
            "steps": [
                {
                    "description": "Add two numbers",
                    "function": "int_add",
                    "input_args": [
                        1,
                        2
                    ],
                    "expected_result": 3,
                    "assertion_type": "equal_to",
                    "save_result_to": "step_1_res"
                },
                {
                    "description": "Send ping",
                    "function": "ping",
                    "expected_result": "pong",
                    "assertion_type": "equal_to"
                },
                {
                    "description": "Add result from step 1",
                    "function": "int_add",
                    "input_args": [
                        "${step_1_res}",
                        2
                    ],
                    "expected_result": 3,
                    "assertion_type": "equal_to"
                }
            ]
        }
    ]
}
